#myModal.modal.fade{ tabindex: 1, role: "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true", "data-backdrop" => "static", "data-keyboard" => true }
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{ type: "button", "data-dismiss" => "modal", "aria-label" => "Close" }
          %span{ "aria-hidden" => true } &times;
        %h3.modal_title
      .modal-body
      .modal-footer